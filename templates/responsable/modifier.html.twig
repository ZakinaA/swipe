{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{{ block("header", "header.html.twig") }}
	<h1>Inscription</h1>
	<div class="form center bg" style="font-weight: bold; text-align: left;">
		{{form_start(form) }}
		{{form_row(form.nom) }}
		{{form_row(form.prenom) }}
		{{form_row(form.rue) }}
		{{form_row(form.ville) }}
		{{form_row(form.code_p, {
            label: 'Code Postal'
        }) }}
		{{form_row(form.email) }}
		{{form_row(form.tel) }}
		<button type="submit" style=" background-color: white; color: black;" class="btn btn-primary">Register</button>
		{{form_end(form) }}</br>
</div>
{{ block("footer", "footer.html.twig") }}{% endblock %}
