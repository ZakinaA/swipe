{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{{ block("header", "header.html.twig") }}



    

<div class="form" style="text-shadow: 2px 0 #000;" >
<h1>Inscription</h1>
   
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.mail) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <button type="submit" style=" background-color: white; color: black;" class="btn btn-primary">Register</button>
        </br>{{ form_row(registrationForm.agreeTerms) }}</br>

    {{ form_end(registrationForm) }}</br>



</div>    
    
{{ block("footer", "footer.html.twig") }}
{% endblock %}
