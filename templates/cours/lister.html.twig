{{ block("header", "header.html.twig") }}


{% block body %}
      <h5>COURS DE CHAQUE SEMAINE</h5>
      <div class="emploi-temps">
        
      <table style="background-color:rgba(0, 0, 0, 0.5);" class="table table-bordered text-white ">

            <thead>
              <tr>
                <th scope="col">Jour</th>
                <th scope="col">Heure Début</th>
                <th scope="col">Heure Fin</th>
                <th scope="col">Cours</th>
                <th scope="col">Professeur</th>
                <th scope="col">Type cours</th>
              </tr>
            </thead>
            <tbody>
              {% for c in pCours %}
                <tr>
                    <td>{{c.dateCours}}</td>
                    <td>{{c.heureDebut}}</td>
                    <td>{{c.heureFin}}</td>
                    <td>{{c.prix}}€</td>
                    <td><a href="{{ path('coursConsulter', { 'id': c.id }) }}">{{c.libelle}}</a></td>
                    <td>{{c.professeur.nom}}</td>
                    <td>{{c.typeCours.libelle}}</td>
                </tr>
              {% else %}
                <tr>
                <td>Aucun cours n'a été trouvé.</td>
                </tr>
              {% endfor %}
            </tbody>
        </table>
        {% if is_granted('ROLE_ADMIN') %}  
        <a href="{{ path('coursAjouter') }}"><button type="button" style=" background-color: white; color: black;" class="btn btn-outline-dark">Ajouter un Cours</button></a>
        {% endif %}  
      </div>
{% endblock %}
{{ block("footer", "footer.html.twig") }}
