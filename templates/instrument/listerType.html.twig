{{ block('header', 'header.html.twig')}}
{% block body %}
		<h5>TYPES D'INSTRUMENTS</h5>
		<div class="emploi-temps">
			<table class='table table-bordered text-black'>

			<tr>
				<td>Libelle</td>
				<td>Classe d'Instrument</td>
			</tr>

			{% for i in pInstruments %}

			<tr>
				<td><a href="{{ path('instrumentConsulterType', { 'id': i.id }) }}">{{ i.libelle }}</a></td>
				<td><a href="{{ path('instrumentListerTypeByID', { 'id': i.classeInstrument.id }) }}">{{ i.classeinstrument.libelle }}</a></td>
				
	{% else %}
			<tr>
				<td>Aucun instrument n'a été trouvé.</td>
			</tr>
	{% endfor %}
</table>

{% if is_granted('ROLE_ADMIN') %}  
   <a href="{{ path('instrumentAjouter') }}"><button type="button" class="btn btn-outline-info">Ajouter un Instrument</button></a>
{% endif %}  
   
</div>
{% endblock %}
